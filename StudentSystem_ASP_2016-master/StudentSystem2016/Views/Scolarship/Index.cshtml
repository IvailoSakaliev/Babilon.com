@model IEnumerable<DataAcsess.Models.Scholarship>

@{
    ViewBag.Title = "Scolarship";
}

<h2>Scolarship</h2>

@Html.Partial("_AddLinkPartialView")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Srok)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartData)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeadLine)
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Srok)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
            <td>
                @if (HttpContext.Current.Session["LoggedUser"] != null)
                {
                    string sessionUser = HttpContext.Current.Session["LoggedUser"].ToString();
                    if (sessionUser == "1")
                    {
                        <span>@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |</span>
                        <span>@Html.ActionLink("Details", "Details", new { id = item.ID }) |</span>
                        <span>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</span>
                    }
                    else if (sessionUser == "2" || sessionUser == "3")
                    {
                        <span>@Html.ActionLink("Details", "Details", new { id = item.ID }) |</span>
                    }

                }
            </td>
        </tr>
    }

</table>