@model StudentSystem2016.VModels.Specialties.SpecialtyList

@{
    ViewBag.Title = "Specialty";
}

<h2>Specialty</h2>

@Html.Partial("_AddLinkPartialView")
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Year of study
        </th>
        <th>
            inspector
        </th>
        <th>
            OKS
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOFStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inspector)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OKS)
            </td>
            <td>
                @if (HttpContext.Current.Session["LoggedUser"] != null)
                {
                    string sessionUser = HttpContext.Current.Session["LoggedUser"].ToString();
                    if (sessionUser == "1")
                    {
                        <span>@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |</span>
                        <span>@Html.ActionLink("Details", "Details", new { id = item.ID }) |</span>
                        <span>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</span>
                    }
                    else if (sessionUser == "2" || sessionUser == "3")
                    {
                        <span>@Html.ActionLink("Details", "Details", new { id = item.ID }) |</span>
                    }

                }
            </td>
        </tr>
    }

</table>
<div style="text-align:right">
    @Html.Partial("~/Views/Shared/_PagerView.cshtml", Model)
</div>
