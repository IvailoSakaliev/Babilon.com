<ul class="pagination pagination-lg">
    @if (Model.CurrentPage == 1)
    {
        <li class="page-item disabled"><a class="page-link" >Previous</a></li>
    }
    else
    {
        int page = Model.CurrentPage - 1;
        string link = "../" + Model.ControllerName + "/" + Model.ActionName + "?" + "Curentpage=" + page;
        <li class="page-item"><a class="page-link" href="@link">Previous</a></li>
    }

    @for (int i = 1; i <= Model.Pages; i++)
    {
        int page = Model.CurrentPage;
        string link = "../" + Model.ControllerName + "/" + Model.ActionName + "?" + "Curentpage=" + i;
        if (i == page)
        {
            <li class="page-item disabled"><a class="page-link">@i</a></li>
        }
        else
        {
            <li class="page-item"><a class="page-link" href="@link">@i</a></li>
        }
    }


    @if (Model.CurrentPage == Model.Pages)
    {
        <li class="page-item disabled"><a class="page-link">Next</a></li>
    }
    else
    {
        int page = Model.CurrentPage + 1;
        string link = "../" + Model.ControllerName + "/" + Model.ActionName + "?" + "Curentpage=" + page;
        <li class="page-item"><a class="page-link" href="@link">Next</a></li>
    }
</ul>
