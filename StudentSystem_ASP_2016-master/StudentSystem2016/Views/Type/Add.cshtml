@model StudentSystem2016.VModels.Models.Type.TypeVM
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Admin/_admin.cshtml";
}

<h2>Add</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post">
            <div style="color:red">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                <label class="control-label">Base Type</label>
                <select class="form-control" name="basemodel">
                    @foreach (var item in Model.BaseModel)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.BaseModel, "", new { @class = "text-danger" })
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

